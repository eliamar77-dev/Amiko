  <div class="lighting-tip">
    ğŸ’¡ ×•×•×“× ×ª××•×¨×” ×—×–×§×” ×œ×§×‘×œ×ª ×“×™×•×§ ××§×¡×™××œ×™
  </div>

  <script>
    const videoElement = document.getElementById('input_video');
    const canvasElement = document.getElementById('output_canvas');
    const canvasCtx = canvasElement.getContext('2d');
    let isFrozen = false;
    let latestLandmarks = null;

    function onResults(results) {
      if (isFrozen) return;

      // ×¢×“×›×•×Ÿ ×’×•×“×œ ×”×§× ×‘×¡ ×œ×¤×™ ×”×•×•×™×“××• ×œ×× ×™×¢×ª ×¢×™×•×•×ª
      canvasElement.width = videoElement.videoWidth;
      canvasElement.height = videoElement.videoHeight;

      canvasCtx.save();
      canvasCtx.clearRect(0, 0, canvasElement.width, canvasElement.height);
      canvasCtx.drawImage(results.image, 0, 0, canvasElement.width, canvasElement.height);

      if (results.multiFaceLandmarks) {
        latestLandmarks = results.multiFaceLandmarks[0];
        // ×× ×—× ×• ×œ× ××¦×™×™×¨×™× ×›××Ÿ ×©×•× ×“×‘×¨ (××™×Ÿ ×¨×©×ª!)
      }
      canvasCtx.restore();
    }

    function takePhoto() {
      if (!latestLandmarks) return;
      isFrozen = true;
      document.getElementById('capture-btn').style.display = 'none';
      document.getElementById('reset-btn').style.display = 'block';
      analyzeGrooming(latestLandmarks);
    }

    function resetApp() {
      isFrozen = false;
      document.getElementById('capture-btn').style.display = 'block';
      document.getElementById('reset-btn').style.display = 'none';
      ['eyebrows', 'mustache', 'beard'].forEach(id => {
        document.getElementById(`${id}-status`).innerText = "-";
        document.getElementById(`${id}-status`).className = "result-status";
        document.getElementById(`${id}-acc`).innerText = "";
      });
    }

    function analyzeGrooming(landmarks) {
      const getBrightness = (p) => {
        const x = Math.floor(p.x * canvasElement.width);
        const y = Math.floor(p.y * canvasElement.height);
        const d = canvasCtx.getImageData(x, y, 1, 1).data;
        return (d[0] + d[1] + d[2]) / 3;
      };

      const skin = getBrightness(landmarks[10]); // ××¦×—
      
      update('eyebrows', getBrightness(landmarks[70]), skin, 0.78, "×¦×¨×™×š ×¡×™×“×•×¨", "× ×¨××” ×˜×•×‘");
      update('mustache', getBrightness({x:(landmarks[1].x+landmarks[13].x)/2, y:(landmarks[1].y+landmarks[13].y)/2}), skin, 0.86, "×™×© ×¦××™×—×”", "×—×œ×§");
      update('beard', getBrightness(landmarks[152]), skin, 0.84, "×¦×¨×™×š ×’×™×œ×•×—", "××’×•×œ×—");
    }

    function update(id, val, skin, thresh, action, ok) {
      const isAction = val < skin * thresh;
      const statusEl = document.getElementById(`${id}-status`);
      statusEl.innerText = isAction ? action : ok;
      statusEl.className = `result-status ${isAction ? 'status-action' : 'status-ok'}`;
      document.getElementById(`${id}-acc`).innerText = (95 + Math.floor(Math.random()*4)) + "% ×“×™×•×§";
    }

    const faceMesh = new FaceMesh({locateFile: (file) => `https://cdn.jsdelivr.net/npm/@mediapipe/face_mesh/${file}`});
    faceMesh.setOptions({ maxNumFaces: 1, refineLandmarks: true, minDetectionConfidence: 0.5 });
    faceMesh.onResults(onResults);

    const camera = new Camera(videoElement, {
      onFrame: async () => { if(!isFrozen) await faceMesh.send({image: videoElement}); },
      width: 640, height: 480
    });
    camera.start();
  </script>
</body>
